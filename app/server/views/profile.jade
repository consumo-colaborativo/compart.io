doctype html
head
    title Mi perfil compart.io
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    style
      body 		{ padding-top:80px; word-wrap:break-word; }
  body
    .container
      .page-header.text-center
        h1
          span.fa.fa-anchor
          | Mi perfil compart.io
        a.btn.btn-default.btn-sm(href='/logout') Salir
      .row
        //
           READ ONLY LOCAL INFORMATION 
        .col-sm-6
          .well
            h3
              span.fa.fa-user
              | Usuario/a compart.io: 
            p
              strong Identificador
              | : #{user._id}
              br
              strong Karma
              | : #{user.local.karma}
              br
              strong Fecha de alta
              | : #{user.local.sign_up_stamp}
              br
              strong Fecha último login
              | : #{user.local.last_sign_in_stamp}
          .well
            h3
              span.fa.fa-user
              |  Actualiza tu perfil: 
            form(action='/profile',method='post')
              .form-group
                label Email
                input.form-control(name='email',type='text',value=user.local.email)
              .form-group  
                label Nombre de Usuario 
                input.form-control(name='username',type='text',value=user.local.username)
              .form-group
                label Nombre Público 
                input.form-control(name='screen_name',type='text',value=user.local.screen_name)
              .form-group
                label Dirección 
                input.form-control(name='address_collect',type='text',value=user.local.street)
              .form-group
                label Código Postal 
                input.form-control(name='zip_code',type='number',value=user.local.zip_code)
              .form-group
                label Ciudad
                select.form-control(name='city_form')
                  for city in cities          
                    if city._id == user.local._city
                      option(value="#{city.postal_code}", selected="selected")  #{city.name}
                    else 
                      option(value="#{city.postal_code}") #{city.name} #{user.local._city} == #{city._id}
              button.btn.btn-warning.btn-lg(type='submit') Actualizar 
              p(id='last_update')   
