extends layout
    
block body
    body(class="skin-blue")        
        <!-- header logo: style can be found in header.less -->
        header(class="header")
            a(href="/admin", class="logo") Compartio
                <!-- Add the class icon to your logo image or logo icon to add the margining -->
            <!-- Header Navbar: style can be found in header.less -->
            nav(class="navbar navbar-static-top" role="navigation")
                <!-- Sidebar toggle button-->
                a(href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button")
                    span(class="sr-only") Toggle navigation
                    span(class="icon-bar")
                    span(class="icon-bar")
                    span(class="icon-bar")
                
                div(class="navbar-right")
                    ul(class="nav navbar-nav")
                        <!-- Messages: style can be found in dropdown.less-->
                        li(class="dropdown messages-menu")
                            a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                                i(class="fa fa-envelope")
                                span(class="label label-success") 4
                            
                            ul(class="dropdown-menu")
                                li(class="header") You have 4 messages
                                li
                                    <!-- inner menu: contains the actual data -->
                                    ul(class="menu")
                                        li <!-- start message -->
                                            a(href="#")
                                                div(class="pull-left")
                                                    img(src="/img/admin/avatar4.jpg" class="img-circle" alt="User Image")
                                                
                                                h4 Support Team
                                                    small
                                                        i(class="fa fa-clock-o")
                                                        |  5 mins
                                                
                                                p Compartio is great; say yeah and share! Why not buy a new awesome theme?
                                            
                                        
                                        li
                                            a(href="#")
                                                div(class="pull-left")
                                                    img(src="/img/admin/avatar2.png" class="img-circle" alt="user image")                                                
                                                h4
                                                    AdminLTE Design Team
                                                    small
                                                        i(class="fa fa-clock-o")
                                                        |  2 hours
                                                
                                                p Why
                                        li
                                            a(href="#")
                                                div(class="pull-left")
                                                    img(src="/img/admin/avatar.png" class="img-circle" alt="user image")                                                
                                                h4 Reviewers
                                                    small
                                                        i(class="fa fa-clock-o")
                                                        | 2 days
                                                
                                                p Why not buy a new awesome theme?
                                        li
                                            a(href="#")
                                                div(class="pull-left")
                                                    img(src="/img/admin/avatar.png" class="img-circle" alt="user image")                                                
                                                h4 Reviewers
                                                    small
                                                        i(class="fa fa-clock-o")
                                                        | 2 days
                                                
                                                p Why not buy a new awesome theme?
                                
                                li(class="footer")
                                    a(href="#") See All Messages
                                                                                                                                                            
                        <!-- Notifications: style can be found in dropdown.less -->
                        li(class="dropdown notifications-menu")
                            a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                                i(class="fa fa-warning")
                                span(class="label label-warning") 10
                            
                            ul(class="dropdown-menu")
                                li(class="header") You have 10 notifications
                                li
                                    <!-- inner menu: contains the actual data -->
                                    ul(class="menu")
                                        li
                                            a(href="#")
                                                i(class="ion ion-ios7-people info")
                                                | 5 new members joined today
                                        li
                                            a(href="#")
                                                i(class="fa fa-warning danger")
                                                Very long description here that may not fit into the page and may cause design problems                                            
                                        li
                                            a(href="#")
                                                i(class="fa fa-users warning")
                                                | 5 new members joined
                                        li
                                            a(href="#")
                                                i(class="ion ion-ios7-person danger")
                                                | You changed your username                                                                                
                                li(class="footer")
                                    a(href="#") View all
                            
                        <!-- User Account: style can be found in dropdown.less -->
                        li(class="dropdown user user-menu")
                            a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                                i(class="glyphicon glyphicon-user")
                                span Usuario
                                    i(class="caret")
                            
                            ul(class="dropdown-menu")
                                <!-- User image -->
                                li(class="user-header bg-light-blue")
                                    img(src="/img/admin/avatar4.jpg" class="img-circle" alt="User Image")
                                    p Usuario - Compartio Team
                                        small Member since Nov. 2012
                                                                    
                                <!-- Menu Body -->
                                li(class="user-body")
                                    div(class="col-xs-4 text-center")
                                        a(href="#") Followers
                                    
                                    div(class="col-xs-4 text-center")
                                        a(href="#") Following

                                    div(class="col-xs-4 text-center")
                                        a(href="#") Friends
                                
                                <!-- Menu Footer-->
                                li(class="user-footer")
                                    div(class="pull-left")
                                        a(href="#" class="btn btn-default btn-flat") Profile
                                    
                                    div(class="pull-right")
                                        a(href="#" class="btn btn-default btn-flat") Sign out
                     
        div(class="wrapper row-offcanvas row-offcanvas-left")
            <!-- Left side column. contains the logo and sidebar -->
            aside(class="left-side sidebar-offcanvas")
                <!-- sidebar: style can be found in sidebar.less -->
                section(class="sidebar")
                    <!-- Sidebar user panel -->
                    div(class="user-panel")
                        div(class="pull-left image")
                            img(src="/img/admin/avatar4.jpg" class="img-circle" alt="User Image")
                        
                        div(class="pull-left info")
                            p Hello User

                            a(href="#")
                                i(class="fa fa-circle text-success")
                                    Online
                                                    
                    <!-- search form -->
                    form(action="#" method="get" class="sidebar-form")
                        div(class="input-group")
                            input(type="text" name="q" class="form-control" placeholder="Search...")
                            span(class="input-group-btn")
                                button(type='submit' name='seach' id='search-btn' class="btn btn-flat")
                                    i(class="fa fa-search")                                    
                    <!-- /.search form -->

                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    ul(class="sidebar-menu")
                        li
                            a(href="/admin")
                                i(class="fa fa-dashboard")
                                span Dashboard
                        li
                            a(href="users")
                                i(class="fa fa-users")
                                span Usuarios
                        li(class="active")
                            a(href="/admin/countries")
                                i(class="fa fa-globe")
                                span Países
                        li
                            a(href="cities")
                                i(class="fa fa-map-marker")
                                span Ciudades
                        

            <!-- Right side column. Contains the navbar and content of the page -->
            aside(class="right-side")
                <!-- Content Header (Page header) -->
                section(class="content-header")
                    h1 Países
                        small Control panel
                    
                    ol(class="breadcrumb")
                        li
                            a(href="#")
                                i(class="fa fa-dashboard")
                                Home                        
                        li(class="active") Países
                                    

                <!-- Main content -->
                section(class="content")                    
                    <!-- Main content -->
                    div(class="row")
                        div(class="col-xs-12")
                            div(class="box")
                                div(class="box-header")
                                    h3(class="box-title") Compartio Countries                                 
                                div(class="box-body table-responsive")
                                    table(id="example1", class="table table-bordered table-striped")
                                        thead
                                            tr
                                                th Name
                                                th Short Name
                                                th NumCode
                                                th Active
                                                th Activation Date
                                                                                    
                                        tbody
                                        for country in countries                                         
                                            tr                                                
                                                td #{country.country_long_name}
                                                td #{country.country_short_name}
                                                td #{country.country_numcode}
                                                td #{country.isActive}
                                                td #{country.activationDate}
                                    //                                                
                                        tfoot
                                            tr
                                                th Name
                                                th Short Name
                                                th NumCode
                                                th Active
                                                th Activation Date                                            
    block scripts
        <!-- DATA TABES SCRIPT -->
        script(src="/js/views/admin/plugins/datatables/jquery.dataTables.js" type="text/javascript")
        script(src="/js/views/admin/plugins/datatables/dataTables.bootstrap.js" type="text/javascript")